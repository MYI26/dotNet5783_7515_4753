<Window x:Class="PL.PassWord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="PassWord" Height="100" Width="200">
    <Grid>
        <StackPanel>
            <TextBlock Text="Enter your password:" Height="23" />
            <PasswordBox x:Name="PasswordBox" MaxLength="6" Height="26"  />
            <Grid Height="50">
                <Button Content="logine" HorizontalAlignment="Left" Margin="77,6,0,0" VerticalAlignment="Top" Click="Button_Click"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
