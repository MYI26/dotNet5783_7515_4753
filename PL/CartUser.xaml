<Window x:Class="PL.CartUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"      
        mc:Ignorable="d"
        Title="CartUser" Height="450" Width="800">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="377*"/>
            <ColumnDefinition Width="423*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="175*"/>
            <RowDefinition Height="158*"/>
            <RowDefinition Height="101*"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="Label" Margin="254,174,1,3" Grid.RowSpan="2">
            <Label Content="Customer Name:" Height="30"/>
            <Label Content="Customer Email:" Height="30"/>
            <Label Content="Customer Adress:" Height="30"/>
            <Label x:Name="Amountitem" Content="Amount of Items:" Height="30"/>
            <Label x:Name="priceT"  Content="Total Price:" Height="30"/>
        </StackPanel>

        <Label x:Name="Titre"  Content="Login to your account" HorizontalAlignment="Left" Margin="310,0,0,0" VerticalAlignment="Center" Height="33" Width="215" FontSize="15" Grid.ColumnSpan="2"/>
        <StackPanel x:Name="Imformation" Margin="367,4,185,97" Grid.RowSpan="2" Grid.ColumnSpan="2" Grid.Row="1">
            <TextBox x:Name="customername"  TextWrapping="Wrap" Width="217" Height="30"/>
            <TextBox x:Name="customeremail" TextWrapping="Wrap" Width="217" Height="30"/>
            <TextBox x:Name="customeradress" TextWrapping="Wrap" Width="217" Height="30"/>
            <TextBox x:Name="itemamount" TextWrapping="Wrap" Width="217" Height="30"/>
            <TextBox x:Name="price" TextWrapping="Wrap" Width="217" Height="30"/>
        </StackPanel>
        <Grid Grid.Row="1" Margin="-1,158,1,25" Grid.RowSpan="2">

            <Button x:Name="clickValid" Content="Valid" HorizontalAlignment="Left" Margin="294,8,0,0" VerticalAlignment="Top" Width="71" Height="25" Click="Button_Click_1"/>


        </Grid>

        <Button x:Name="but1"  Content="Details cart" HorizontalAlignment="Left" Margin="337,139,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="80" Height="23" Click="but1_Click" />
        <Button x:Name="but2" Content="Confirmation Card" HorizontalAlignment="Left" Margin="62,139,0,0" VerticalAlignment="Top" Width="110" Height="23" Grid.Column="1" />
        <Button x:Name="but3" Content="Add Product Cart" HorizontalAlignment="Left" Margin="206,139,0,0" VerticalAlignment="Top" Width="104" Height="23" Click="but3_Click" />

    </Grid>
</Window>
