<Window x:Class="PL.CartUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="CartUser" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="377*"/>
            <ColumnDefinition Width="423*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="102*"/>
            <RowDefinition Height="153*"/>
            <RowDefinition Height="179*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="254,101,1,3" Grid.RowSpan="2">
            <Label Content="Customer Name:" Height="40"/>
            <Label Content="Customer Email:" Height="40"/>
            <Label Content="Customer Adress:" Height="40"/>
        </StackPanel>
        <StackPanel Margin="0,102,1,0" Grid.RowSpan="2"/>
        <Label Content="Login to your account" HorizontalAlignment="Left" Margin="288,51,0,0" VerticalAlignment="Top" Height="33" Width="215" FontSize="15" Grid.ColumnSpan="2"/>
        <StackPanel Grid.Column="1" Margin="0,6,165,5" Grid.Row="1">
            <TextBox x:Name="customername"  TextWrapping="Wrap" Width="217" Height="40"/>
            <TextBox x:Name="customeremail" TextWrapping="Wrap" Width="217" Height="40"/>
            <TextBox x:Name="customeradress" TextWrapping="Wrap" Width="217" Height="40"/>
        </StackPanel>
        <Grid Grid.Row="2">

            <Button Content="Valid" HorizontalAlignment="Left" Margin="308,4,0,0" VerticalAlignment="Top" Width="66" Height="25" Click="Button_Click_1"/>


        </Grid>

    </Grid>
</Window>
